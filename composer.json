{
	"name"        : "jmf/type-validation",
	"type"        : "library",
	"license"     : "MIT",
	"description" : "Allows to check if a variable is of the expected type, using a type specification string like the ones in PHPDoc blocks (int, \\Foo\\Bar[], null|string, etc).",
	"require"     : {
		"php"          : ">=8.2",
		"perf/caching" : "^3.0"
	},
	"require-dev": {
		"ext-xdebug": "*",
		"phing/phing": "^2.16",
		"phpmd/phpmd": "^2.8",
		"phpunit/phpunit": "^10.2",
		"squizlabs/php_codesniffer" : "^3.5",
		"rector/rector": "^0.17.2",
		"phpstan/phpstan": "^1.10"
	},
	"autoload" : {
		"psr-4" : {
			"Jmf\\TypeValidation\\" : "src/"
		}
	},
	"autoload-dev" : {
		"psr-4" : {
			"Jmf\\TypeValidation\\" : "test/unit/src/"
		}
	}
}
